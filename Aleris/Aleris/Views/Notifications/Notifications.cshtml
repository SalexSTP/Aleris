@model IEnumerable<Aleris.Models.Invite>

@{
    ViewData["Title"] = "Известия";
}

<h1>Известия</h1>

@if (Model != null && Model.Any())
{
    <ul class="list-group" style="width: 50%;">
        @foreach (var invite in Model)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong class="h5">Компания:</strong> @invite.Company.Name
                    </div>
                    <div>
                        <strong class="h5">Дата:</strong> @invite.DateSent
                    </div>
                    <div>
                        <form method="post" asp-action="AcceptInvite" asp-controller="Notifications" asp-route-id="@invite.Id" class="d-inline">
                            <button type="submit" class="btn btn-success btn-sm">Приеми</button>
                        </form>
                        <form method="post" asp-action="RejectInvite" asp-controller="Notifications" asp-route-id="@invite.Id" class="d-inline ml-3">
                            <button type="submit" class="btn btn-danger btn-sm">Откажи</button>
                        </form>
                    </div>
                </div>
            </li>
        }
    </ul>
}
else
{
    <p>Няма нови известия.</p>
}
