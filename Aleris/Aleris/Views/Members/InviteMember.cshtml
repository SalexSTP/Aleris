@model int

@{
    ViewData["Title"] = "Покана на член към екипа";
}

<h1>Покани нов член към екипа</h1>

<form method="post" action="@Url.Action("SendInvite", "Members")">
    <input type="hidden" name="CompanyId" value="@Model" />

    <div class="form-group">
        <label for="email">Имейл на новия член:</label>
        <input type="email" class="form-control" id="email" name="Email" required />
    </div>

    <div class="form-group">
        <label for="role">Избери роля:</label>
        <select class="form-control" id="role" name="Role" required>
            <option value="Editor">Редактор</option>
            <option value="Viewer">Зрител</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Изпрати покана</button>
</form>