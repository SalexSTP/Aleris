@model Aleris.Models.CompanyMember

@{
    ViewData["Title"] = "Редактирай член - " + Model.Name;
}

<h1>Редактирай член: @Model.Name</h1>

<form asp-action="EditMember" method="post">
    <div class="form-group">
        <label for="Name">Име</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" readonly />
    </div>

    <div class="form-group">
        <label for="Role">Роля</label>
        <select class="form-control" id="role" asp-for="Role" required>
            <option value="Editor">Редактор</option>
            <option value="Viewer">Зрител</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Email">Имейл</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" readonly />
    </div>

    <div class="form-group" style="margin-top:10px;">
        <button type="submit" class="btn btn-primary" style="margin-right: 10px;">Запази промените</button>
        <a href="@Url.Action("Members", "Company", new { id = Model.CompanyId })" class="btn btn-secondary">Cancel</a>
    </div>
</form>