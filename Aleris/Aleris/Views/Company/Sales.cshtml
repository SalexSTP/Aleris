@model Aleris.Models.Company

@{
    ViewData["Title"] = Model.Name;
}

<div class="content">
    <h1>Sales for @Model.Name:</h1>
</div>

@section Styles {
    <style>
        .content {
            margin-left: 300px; /* Ensures it's not under the sidebar */
            padding: 20px;
            height: 100%; /* Makes sure the page takes full height */
            display: flex;
            flex-direction: column;
            align-items: center; /* Centers horizontally */
            text-align: center; /* Centers text content */
        }
    </style>
}